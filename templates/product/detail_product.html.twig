{% extends 'base.html.twig' %}

{% block title %}{{ product.nom }}{% endblock %}

{% block body %}
    <div class="container-flex-detail-product">
        <div class="container-image">
            <img src="{{ asset(imagePath ~ product.image) }}" alt="">
        </div>
        <div class="container-text-product-detail">
            <div class="container-title-price-product">
                <div class="title-product">{{ product.nom }}</div>
                <div class="price-product">{{ product.prixProduit|number_format(2,',') }}â‚¬</div>
            </div>
            <div class="container-description-product">
                <div class="description-title">Description</div>
                <div class="description-product">{{ product.descriptionLongue }}</div>
            </div>
            <a href="{{ path('app_add_to_cart', {'id': product.id}) }}" class="link-add-cart">Ajouter au panier</a>
        </div>
    </div>
{% endblock %}
